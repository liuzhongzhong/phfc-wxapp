/* pages/list/list.wxss */
page {
  background-color: #fff;
}
.header {
  width: 750rpx;
  height: 80rpx;
  background-color: white;
}

.header .search {
  width: 690rpx;
  height: 80rpx;
  margin-left: 30rpx;
  background-color: #F8F8F8;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
}

.header .search .left{
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.header .search .left image{
  width: 40rpx;
  height: 40rpx;
}

.header .search .right input{
  color: #333333;
  font-size: 28rpx;
  width: 600rpx;
}

.search-input {
  color: #b2b2b2;
  font-size: 28rpx;
}

.filter {
  
  height: 90rpx;
  width: 750rpx;
  background-color: white;
  border-bottom: 1rpx solid #e5e5e5;
  display: flex;
  align-items: center;
  justify-content:space-around;
  z-index:9;
}

.filter .span {
  display: flex;
  align-items: center;
}

.filter .span text {
  color: #333333;
  font-size: 28rpx;
}

.filter .span image {
  margin-left: 10rpx;
  width: 20rpx;
  height: 12rpx;
}

.list {
  padding-top: 10rpx;
  background-color: white;
}

.list .line {
  margin-top: 30rpx;
  width: 690rpx;
  margin-left: 30rpx;
  display: flex;
}

.list .line .left {
  width: 220rpx;
}

.list .line .left image {
  width: 220rpx;
  height: 160rpx;
}

.list .line .right {
  margin-left: 20rpx;
}

.list .line .right .name {
  line-height: 40rpx;
}

.list .line .right .name text {
  font-size: 34rpx;
  color: #333;
}

.list .line .right .subname {
  margin-top: -5rpx;
  margin-bottom: 5rpx;
}

.list .line .right .subname text {
  font-size: 26rpx;
  color: #888;
}

.list .line .right .spanlist {
  display: flex;
}

.list .line .right .span {
  height: 30rpx;
  border-radius: 4rpx;
  border: 1rpx solid #b2b2b2;
  margin-right: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.list .line .right .span text {
  font-size: 22rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  color: #b2b2b2;
}

.list .line .right .money {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
}

.list .line .right .money .left {
  font-size: 32rpx;
  font-weight: bolder;
  color: #e8624c;
  width: 130rpx;
}

.list .line .right .money .right {
  font-size: 26rpx;
  color: #b2b2b2;
}

.list .line .right .spanlist .dt-span {
  border: 0;
  background-color: #e8f2fe;
}

.list .line .right .spanlist .dt-span .dt-text {
  color: #6eabf7;
}

.list .line .right .spanlist .ss-span {
  border: 0;
  background-color: #e4f4ed;
}

.list .line .right .spanlist .ss-span .ss-text {
  color: #60ba89;
}

.list .line .right .spanlist .fz-span {
  border: 0;
  background-color: #faf0e1;
}

.list .line .right .spanlist .fz-span .fz-text {
  color: #e6a349;
}

.list .line .right .spanlist .mw-span {
  border: 0;
  background-color: #e5f4f7;
}

.list .line .right .spanlist .mw-span .mw-text {
  color: #62bbca;
}

.fenge {
  width: 720rpx;
  height: 1rpx;
  background-color: #e5e5e5;
  margin-top: 26rpx;
  margin-left: 30rpx;
}

.nomore {
  background-color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 50rpx;
  padding-bottom: 150rpx;
}

.nomore text {
  color: #b2b2b2;
  font-size: 24rpx;
}

.chioce-list-hide {
  display: none !important;
}

.chioce-list-show {
  top: 170rpx;
  animation: slide 800ms;
  
}

@keyframes slide {
  0% {
    top: 140rpx;
  }

  100% {
    top: 170rpx;
  }
}

.area-list,.price-list,.type-list,.other-list {
  position: absolute;
  top: 170rpx;
  left: 0;
  width: 100%;
  background-color: #fff;
  z-index:2;
  font-size: 14px;
  border-bottom: 1rpx solid #ddd;
  
}

.other-list {
  padding-bottom: 160rpx;
}

.mask{
  position: fixed;
  top:170rpx;
  bottom: 0;
  right: 0;
  left: 0;
  background-color: #000;
  opacity: 0.4;
}


.district-left {
  background-color: white;
  width: 375rpx;
}

.district-right {
  width: 376rpx;
  background-color: #f2f2f3;
}

.district-parent {
  margin-left: 50rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #e5e5e5;
  color: #333;
  
}

.district-parent-active {
  color: #EF8432;
}

.scroll-district{
  height: 500rpx;
}

.district-children {
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 50rpx;
  border-bottom: 1rpx solid #e5e5e5;
}

.area-list {
  display: flex;
}

.price-main {
  margin-left: 40rpx;
  
}
.price-title {
  margin-top: 30rpx;
}

.price-title text {
  color: #333333;
  font-size: 32rpx;
}

.price-input {
  margin-top: 30rpx;
  display: flex;
}

.input-left,.input-right {
  width: 315rpx;
  height: 60rpx;
  border:1rpx solid #cccccc;
  border-radius: 2rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.small-line {
  width: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.small-line .gang{
  width: 12rpx;
  height: 1rpx;
  background-color: #cccccc;
}
.price-input-placeholder {
  color: #b2b2b2;
  font-size: 26rpx;
}

.price-input input {
  color: #333333;
  font-size: 26rpx;
  margin-left: 5rpx;
}

.price-span-list {
  margin-top: 10rpx;
}

.list-line {
  
  display: flex;
  align-items: center;
  flex-wrap:wrap;
}

.choice-span {
  width: 150rpx;
  height:52rpx;
  border-radius: 5rpx;
  background-color: #f5f5f5;
  margin-right: 25rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
}

.choice-span-check {
  width: 150rpx;
  height:52rpx;
  border-radius: 5rpx;
  background-color: #ff7e00;
  margin-right: 25rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
}

.choice-span text {
  color: #888;
  font-size: 24rpx;
}

.choice-span-check text {
  color: white;
  font-size: 24rpx;
}

.choice-line {
  margin-top: 40rpx;
  background-color: #e5e5e5;
  width: 100%;
  height: 1rpx;
}

.choice-button{
  display: flex;
  width: 750rpx;
  height: 160rpx;
  justify-content: center;
  align-items: center;
}

.spacil-button {
  position:fixed;
  left: 0;
  bottom: 0;
  z-index:999;
  box-shadow: 0px -2px 4px 0px rgba(173,170,170,0.5);
  background-color: #fff;
}

.button-left {
  width: 320rpx;
  height: 80rpx;
  border-radius: 5rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f5f5f5;
}

.button-left text {
  color: #9c9fa1;
  font-size: 28rpx;
}

.button-right {
  width: 320rpx;
  height: 80rpx;
  border-radius: 5rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ff7e00;
  margin-left: 30rpx;
}

.button-right text {
  color: #fff;
  font-size: 28rpx;
}

.none {
  margin-top: 380rpx;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction:column;
}

.none image {
  width: 200rpx;
  height: 200rpx;
}

.none text {
  margin-top: 20rpx;
  color: #888888;
  font-size: 26rpx;
}